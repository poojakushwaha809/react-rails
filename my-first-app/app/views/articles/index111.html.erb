<h1>Articles</h1>
<style>
  table, th, td {
  border: 1px solid black;
  border-collapse: collapse;
}
</style>
<table>
  <tr>
    <th>Title</th>
    <th>Edit</th>
    <th>Show</th>
    <th>Delete</th>

  </tr>

  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= link_to "Edit", edit_article_path(article)%></td>
      <td><%= link_to "Show", article_path(article)%></td>
      <td><%= link_to "Delete", destroy_article_path(article), data: {
        turbo_method: :delete,
        turbo_confirm: "Are you sure article No. #{article.id} delete?"
      } %></td>

    </tr>
  <% end %>

</table>
